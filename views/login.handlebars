<div class="container">
        {{#unless loginStatus}}
        <div class="row">
            <div class="col align-self-center">
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="text" class="form-control" id="emailOrUsername_form" aria-describedby="emailHelp" placeholder="Enter email or username">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="text" class="form-control" id="password_form" placeholder="Password">
                </div>
            </form>
            </div>
        </div>
        <div class="row">
            <button type="button" class="btn btn-primary btn-lg btn-block" id="sign_in_btn">Sign In</button>
        </div><br>
        <div class="row">
            <div class="col">
                <a type="button" class="btn btn-lg btn-block" id="sign_up_btn" href="/register">Sign Up</a>
            </div>
            <div class="col">
                <a type="button" class="btn btn-secondary btn-lg btn-block text-info" id="twiter_sign_in_btn" href="/auth/twitter"><i class="fa fa-twitter fa-1x" aria-hidden="true"></i> Sign In with Twitter</a>
            </div>
            <div class="col">
                <a type="button" class="btn btn-secondary btn-lg btn-block text-primary" id="fb_sign_in_btn" href="/auth/facebook"><i class="fa fa-facebook fa-1x" aria-hidden="true"></i> Sign In with Facebook</a>
            </div>
        </div><br>
        {{/unless}}
        {{#if loginStatus}}
        <div class="row">
            {{!--<img src="{{dbUser.profile_picture}}"> --}}
            <h2>Welcome: {{dbUser.name}}</h2>
        </div><br>
            {{#if dbUser.location}}
            <div class="row">
                <h3> You are located in  {{dbUser.location}}</h3>
            </div><br>
            {{/if}}
        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-danger btn-lg btn-block" id="sign_out_btn">Sign Out</button>
            </div>
            <div class="col">
                <a type="button" class="btn text-primary btn-lg btn-block" href="/profile"id="profile_btn">Profile</a>
            </div>
        </div><br>
        <div class="row">
            <div class="input-group">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="donation_amount">
            <span class="input-group-addon">.00</span>
            </div>
            <button type="button" class="btn btn-success btn-lg btn-block" id="donate_btn"><i class="fa fa-money" aria-hidden="true"></i> Donate</button>
        </div>
        {{/if}}
    </div>

    <script src="/assets/js/login.js" type="text/javascript"></script>